{
    "functions": {
        "api/**/*.ts": {
            "runtime": "nodejs18.x"
        }
    },
    "builds": [
        {
            "src": "api/**/*.ts",
            "use": "@vercel/node"
        },
        {
            "src": "react-router.config.ts",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build/client"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/.*",
            "dest": "/index.html"
        }
    ]
}